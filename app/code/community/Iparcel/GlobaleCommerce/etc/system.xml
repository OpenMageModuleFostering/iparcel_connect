<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <i-parcel translate="label" module="ipglobalecommerce">
        <label>i-parcel</label>
            <sort_order>500</sort_order>
        </i-parcel>
    </tabs>
    <sections>
        <payment>
            <groups>
                <iparcel translate="label" module="ipglobalecommerce">
                    <label>i-parcel</label>
                    <sort_order>9999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </iparcel>
            </groups>
        </payment>
        <iparcel>
            <label>Configuration</label>
            <tab>i-parcel</tab>
            <frontent_type>text</frontent_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <scripts>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </scripts>
                <international_customer translate="label">
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </international_customer>
            </groups>
        </iparcel>
        <external_api>
            <label>External API</label>
            <tab>i-parcel</tab>
            <frontend_type>text</frontend_type>
            <sort_order>120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sales translate="label">
                    <label>Sales</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enable External Sales API</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <transactional_emails>
                            <label>Suppress Transactional e-mails</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transactional_emails>
                        <order_status>
                            <label>New Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>iparcel/system_config_source_sales_order_status</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status>
                        <create_invoices>
                            <label>Automatically create invoices for i-parcel orders?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </create_invoices>
                        <create_shipments>
                            <label>Automatically create shipments for i-parcel orders?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </create_shipments>
                    </fields>
                </sales>
            </groups>
        </external_api>
    </sections>
</config>
